package tp2_classe;

public class Point {
	private char nom;
	private int abscisse,ordonnee;
	public void afficher() {
		System.out.println(nom+"("+abscisse+","+ordonnee+")");
	}
	public void deplacer(int a,int b) {
		abscisse+=a;
		ordonnee+=b;
	}
	public void reset() {
		abscisse=0;
		ordonnee=0;
	}
}
